{
    "version": 8,
    "name": "Rusic Tiles Demo Style",
    "sources": {
       "rustic": {
            "type": "vector",
            "url": "http://localhost:3000/rustic"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "White"
            }
        },
        {
            "id": "area",
            "source": "rustic",
            "source-layer": "area",
            "type": "fill",
            "filter": ["!has", "building"],
            "paint": {
                "fill-color": [
                    "case",
                    ["==", ["get", "natural"], "water"], "Blue",
                    "Black"
                ],
                "fill-opacity": 0.1
            }
        },
        {
            "id": "unspecified-line",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": ["!",[
                "any",
                ["has", "barrier"],
                ["has", "highway"],
                ["has", "railway"],
                ["has", "route"],
                ["has", "waterway"]
            ]],
            "paint": {
                "line-color": "Purple"
            }
        },
        {
            "id": "waterway-barrier-line",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": ["in", ["get", "waterway"], ["literal", ["dam", "weir"]]],
            "paint": {
                "line-color": "Black"
            }
        },
        {
            "id": "barrier-line",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": ["has", "barrier"],
            "paint": {
                "line-color": "Black"
            }
        },
        {
            "id": "waterway",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": [
                "all",
                ["has", "waterway"],
                ["!", ["in", ["get", "waterway"], ["literal", ["dam", "weir"]]]]
            ],
            "paint": {
                "line-color": "CornflowerBlue"
            }
        },
        {
            "id": "railway",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": ["has", "railway"],
            "paint": {
                "line-color": "Black",
                "line-opacity": 0.5
            }
        },
        {
            "id": "highway",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": ["has", "highway"],
            "paint": {
                "line-color": "Red",
                "line-opacity": 0.5
            }
        },
        {
            "id": "route",
            "source": "rustic",
            "source-layer": "line",
            "type": "line",
            "filter": ["has", "route"],
            "paint": {
                "line-color": "DarkSlateGrey",
                "line-dasharray": [4, 4]
            }
        },
        {
            "id": "building",
            "source": "rustic",
            "source-layer": "area",
            "type": "fill",
            "filter": ["has", "building"],
            "paint": {
                "fill-color": "Orange",
                "fill-opacity": 0.5
            }
        },
        {
            "id": "point",
            "source": "rustic",
            "source-layer": "point",
            "type": "circle",
            "paint": {
                "circle-color": "Teal",
                "circle-opacity": 0.5
            }
        }
    ]
}